<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:paddingVertical="12sp"
    android:background="#6C6B6B">

    <TextView
        android:id="@+id/item_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/item_name_label"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/item_count_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_count_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/item_count_label"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_name_label"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>